<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_gray">

    <ImageView
        android:id="@+id/image_view_poster"
        android:layout_width="180dp"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/image_view_heart"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_poster"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/margin_image"
        android:layout_marginTop="@dimen/margin_standard"
        android:src="@drawable/heart_empty"/>
    <TextView
        android:id="@+id/text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_view_heart"
        app:layout_constraintStart_toEndOf="@id/image_view_heart"
        app:layout_constraintBottom_toBottomOf="@id/image_view_heart"
        android:layout_marginStart="@dimen/margin_standard"
        android:textColor="@color/white"
        android:lines="2"
        android:text="Title"/>
    <ImageView
        android:id="@+id/image_view_star"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/image_view_heart"
        app:layout_constraintStart_toStartOf="@id/image_view_heart"
        android:layout_marginTop="@dimen/margin_standard"
        android:src="@drawable/star_empty"/>
    <TextView
        android:id="@+id/text_view_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_view_star"
        app:layout_constraintStart_toStartOf="@id/text_view_title"
        android:text=" /10"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_min"/>

</androidx.constraintlayout.widget.ConstraintLayout>